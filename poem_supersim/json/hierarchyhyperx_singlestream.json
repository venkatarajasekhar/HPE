{
  "simulator": {
    "cycle_time": 813, // picoseconds
    "print_progress": true,
    "print_interval": 1.0  // seconds
  },
  "random": {
    "seed": 12345678
  },
  "network": {
    "topology": "hierarchyhyperx",
    "num_vcs": 1,
    "hierarchy": 2,
    "global_dimension_widths": [6, 2],
    "global_dimension_weights": [1, 1],
    "local_dimension_widths": [3, 2],
    "local_dimension_weights": [1, 1],
    "global_links_per_router": 1,
    "concentration": 1,
    "internal_local_channel": {
      "latency": 1 // cycles
    },
    "internal_global_channel": {
      "latency": 5 // cycles
    },
    "external_channel": {
      "latency": 5 // cycles
    },
    "channel_log": {
      "file": "channels.csv"
    },
    "interface": {
      "type": "poem",
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      },
      "init_credits": 14,
      "crossbar": {
        "latency": 1 // cycles
      }
    },
    "router": {
      "routing": {
        "algorithm": "dimension_ordered",
        "latency": 1, // cycles
        "all_vcs": false
      },
      "input_queue_depth": 14,  // min is 14
      "local_queue_depth": 6,  // min is 6
      "output_queue_depth": 3,  // min is 3
      "crossbar": {
        "latency": 1 // cycles
      },
      "crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      },
      "output_crossbar": {
        "latency": 1 // cycles
      },
      "output_crossbar_scheduler": {
        "allocator": {
          "type": "r_separable",
          "slip_latch": true,
          "resource_arbiter": {
            "type": "comparing",
            "greater": false
          }
        }
      }
    }
  },
  "application": {
    "type": "single_stream",
    "max_injection_rate": 1.0,
    "terminal": {
      "num_messages": 100000,
      "min_message_size": 1,
      "max_message_size": 1,
      "max_packet_size": 1
    },
    "message_log": {
      "file": "data.mpf.gz"
    },
    "rate_log": {
      "file": "rates.csv"
    },
    "source_terminal": 0,  // < 0 is random
    "destination_terminal": 13  // < 0 is random
  },
  "debug": []
}
